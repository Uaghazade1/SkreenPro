{
  "name": "sshot",
  "version": "1.0.0",
  "description": "",
  "main": "electron.js",
  "scripts": {
    "dev": "NODE_ENV=development concurrently \"vite\" \"npm run start:electron\"",
    "start:electron": "wait-on http://localhost:5173 && electron .",
    "build": "vite build && mkdir -p dist/preload && cp src/preload/preload.js dist/preload/preload.js",
    "electron": "electron .",
    "dist": "npm run build && electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.0.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@supabase/supabase-js": "^2.87.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "konva": "^10.0.12",
    "lucide-react": "^0.561.0",
    "react-konva": "^19.2.1",
    "tailwind-merge": "^3.4.0",
    "use-image": "^1.1.4"
  },
  "build": {
    "appId": "com.skreenpro.app",
    "productName": "SkreenPro",
    "files": [
      "dist/renderer/**/*",
      "dist/preload/**/*",
      "electron.js",
      "public/**/*",
      "!node_modules/**/*",
      "!src/**/*",
      "!**/*.ts",
      "!**/*.tsx",
      "!**/*.map",
      "!dist/*.dmg",
      "!dist/*.zip",
      "!dist/*.blockmap",
      "!dist/*.yml",
      "!dist/mac-arm64"
    ],
    "mac": {
      "icon": "public/icons/icon.icns",
      "category": "public.app-category.graphics-design",
      "target": [
        "dmg",
        "zip"
      ],
      "identity": null
    }
  }
}
